@model ZadanieRekrutacyjne.Models.Tree


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Tree</h4>
        <span>Nazwa: @Model.Name</span><br />
        <span>Obecny rodzic: @ViewBag.CurrentParent</span>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TreeId)

        @Html.HiddenFor(model => model.Name)

    <div class="form-group">
        @Html.Label("Nowy rodzic: ", htmlAttributes: new { @class = "control-label col-md-2" })
        @* @Html.LabelFor(model => model.ParentID, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10">
            @Html.DropDownList("ParentID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ParentID, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
